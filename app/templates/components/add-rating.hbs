<div class="add-rating">
  <h3>Add Rating</h3>
  <form>
    <div class="form-group">
      <label for="stars">Stars:</label>
      {{#x-select value=stars}}
        {{#x-option value="5"}}5{{/x-option}}
        {{#x-option value="4.5"}}4.5{{/x-option}}
        {{#x-option value="4"}}4{{/x-option}}
        {{#x-option value="3.5"}}3.5{{/x-option}}
        {{#x-option value="3"}}3{{/x-option}}
        {{#x-option value="2.5"}}2.5{{/x-option}}
        {{#x-option value="2"}}2{{/x-option}}
        {{#x-option value="1.5"}}1.5{{/x-option}}
        {{#x-option value="1"}}1{{/x-option}}
        {{#x-option value="0.5"}}0.5{{/x-option}}
      {{/x-select}}  out of 5
    </div>
    <div class="form-group">
      <label for="explanation">Explanation</label>
      {{textarea value=explanation type="text"}}
    </div>
    <button class="btn btn-submit" {{action 'addRating' item}}>Add Rating</button>
  </form>
</div>
